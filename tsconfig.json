{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2019", "dom"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": ["src/*"]
}
