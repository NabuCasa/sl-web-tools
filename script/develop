# Stop on errors
set -e

cd "$(dirname "$0")/.."

rm -rf dist

# Quit all background tasks when script exits
trap "kill 0" EXIT

# Run tsc once as rollup expects those files
npm exec -- tsc || true
cp src/*.py src/*.txt dist

npm exec -- serve -p 5010 &
npm exec -- tsc --watch &
npm exec -- rollup -c --watch &
wait
